{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
    <h1 class="title">Member index</h1>

    <div class="container-fluid example-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>GroupRole</th>
                    <th>BirthDate</th>
                    <th>Picture</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for member in members %}
                <tr>
                    <td>{{ member.id }}</td>
                    <td>{{ member.firstName }}</td>
                    <td>{{ member.lastName }}</td>
                    <td>{{ member.groupRole }}</td>
                    <td>{{ member.birthDate ? member.birthDate|date('Y-m-d') : '' }}</td>
                    <td>{{ member.picture }}</td>
                    <td>
                        <button class="btn crud-button">
                            <a class="button-link" href="{{ path('app_member_show', {'id': member.id}) }}">Voir</a>
                        </button>
                        <button class="btn crud-button">
                            <a class="button-link" href="{{ path('app_member_edit', {'id': member.id}) }}">Modifier</a>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <button class="btn crud-button">
            <a class="button-link" href="{{ path('app_member_new') }}">Nouveau</a>
        </button>
    </div>

{% endblock %}
