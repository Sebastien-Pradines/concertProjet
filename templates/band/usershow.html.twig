{% extends 'base.html.twig' %}

{% block title %}Groupe{% endblock %}

{% block body %}
    <h1>{{ band.name }}</h1>

    <h2>Membres:</h2>
    <div class="container-fluid row">

        {%  for member in band.members %}
            <div class="card" style="width: 18rem;">
                <img src="{{ asset('uploads/pictures/' ~ member.picture) }}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{ member.firstName }} {{ member.lastName }}</h5>
                    <p class="card-text"> RÃ´le: {{ member.groupRole }}</p>
                    <p class="card-text"> Date de naissance: {{ member.birthDate|date("d/m/Y") }}</p>
                </div>
            </div>
        {%  endfor %}
    </div>
    <hr class="hr" />
    <h2>Concerts:</h2>
    <div class="container-fluid row">

        {%  for concert in band.concerts %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ concert.name }}</h5>
                    <p class="card-text"> Salle: {{ concert.stage.name }}</p>
                    <p class="card-text"> Date: {{ concert.date|date("d/m/Y") }}</p>
                </div>
            </div>
        {%  endfor %}
    </div>

{% endblock %}
