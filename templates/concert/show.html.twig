{% extends 'base.html.twig' %}

{% block title %}Concert{% endblock %}

{% block body %}
    <h1>Concert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concert.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ concert.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ concert.date ? concert.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ concert.prix }}</td>
            </tr>
            <tr>
                <th>Groupe</th>
                <td>{{ concert.band.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_concert_index') }}">back to list</a>

    <a href="{{ path('app_concert_edit', {'id': concert.id}) }}">edit</a>

    {{ include('concert/_delete_form.html.twig') }}
{% endblock %}
